<%# Unit 4, Select Inv Item activity %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<link rel="stylesheet" href="css/styles.css">

<%- messages() %>

<% if (errors) { %>
<ul class="message warning">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<!--if the account type is "Client": greet the client by first name in an <h2> element (e.g. <h2>Welcome Basic</h2>).-->
<% if(accountData.account_type == 'Client') { %>
  <h2>Welcome <% accountData.account_firstname %> </h2>
<% } %>

<% if(accountData.account_type != 'Client'){ %>
  <div class="admin-welcome-container">
      <h2>Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %></h2>
      <h3>Inventory Management</h3>
      <p class="manage-inventory"><a href="/inv/">Manage Inventory</a></p> 
  </div>
<% } %>

<div class="account-status-minimal">
    <p>You're logged in.</p>
    <a href="/account/update/<%= accountData.account_id %>" title="Click to update your account information">Edit Account Information</a>
</div>