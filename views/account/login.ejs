<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div id="loginContainer">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <label for="email">Email Address:</label>
      <input type="email" name="account_email" id="email" required value="<%= typeof locals.account_email !== 'undefined' ? locals.account_email : '' %>">
      
      <label for="password">Password</label>
      <input type="password" name="account_password" id="password" required>
      
      <div id="pswdBtn">Show Password</div>
      <button type="submit">Login</button>
    </fieldset>
  </form>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>

<script>
// Script para mostrar/ocultar contrase√±a
document.getElementById('pswdBtn').addEventListener('click', function() {
  const passwordField = document.getElementById('password');
  if (passwordField.type === 'password') {
    passwordField.type = 'text';
    this.textContent = 'Hide Password';
  } else {
    passwordField.type = 'password';
    this.textContent = 'Show Password';
  }
});
</script>